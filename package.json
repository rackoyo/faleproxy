{
  "name": "faleproxy",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "test": "jest",
    "test:ci": "jest --ci --coverage",
    "dev": "nodemon app.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.7",
    "cheerio": "^1.0.0-rc.12",
    "express": "^4.18.2",
    "web-streams-polyfill": "^4.0.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nock": "^13.5.4",
    "nodemon": "^3.0.3",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironmentOptions": {
      "url": "http://localhost"
    },
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "collectCoverageFrom": [
      "app.js",
      "public/**/*.js",
      "!tests/**",
      "!**/node_modules/**"
    ],
    "projects": [
      {
        "displayName": "node",
        "testEnvironment": "node",
        "testMatch": [
          "<rootDir>/tests/!(script).test.js"
        ]
      },
      {
        "displayName": "jsdom",
        "testEnvironment": "jsdom",
        "testMatch": [
          "<rootDir>/tests/script.test.js"
        ],
        "setupFiles": ["<rootDir>/tests/setup.js"]
      }
    ]
  }
}
