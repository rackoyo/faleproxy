{
  "name": "faleproxy",
  "version": "1.0.0",
  "description": "A proxy that replaces 'Yale' with 'Fale' in web content",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "vercel-build": "echo 'Building for Vercel deployment'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage",
    "preinstall": "npx only-allow npm"
  },
  "engines": {
    "node": ">=16.x"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "cheerio": "^0.22.0",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nock": "^13.5.6",
    "node-fetch": "^2.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.4",
    "web-streams-polyfill": "^3.2.1"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!jest.config.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 70,
        "branches": 70,
        "functions": 70,
        "lines": 70
      }
    }
  }
}
